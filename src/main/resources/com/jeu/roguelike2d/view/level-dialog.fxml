   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="410.0" spacing="20.0">
      <children>
          <Button onAction="#exitGame" style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #000000aa; -fx-text-fill: #ffffff;" text="Quitter" />
